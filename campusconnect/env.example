# Environment configuration for CampusConnect Frontend

# Backend API URL
REACT_APP_API_URL=http://localhost:3001/api

# Environment (development, staging, production)
REACT_APP_ENV=development

# App Configuration
REACT_APP_NAME=CampusConnect
REACT_APP_VERSION=1.0.0

# Google Maps API Key (for location verification)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Default settings
REACT_APP_DEFAULT_REQUIRED_POINTS=100
REACT_APP_MAX_EVENT_CAPACITY=500

# QR Code Configuration
REACT_APP_QR_CODE_EXPIRY_MINUTES=30
REACT_APP_LOCATION_RADIUS_METERS=50

# Debug settings
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_MOCK_DATA=true
